{{#fields}}
<div class="row">
  <div class="columns medium-4 large-3">
    <label ng-class="{{openCurly}}'is-invalid-label': GOINPUTNAME[{{getKey}}].$error.server{{closeCurly}}">{{getKey}}:</label>
    <input ng-class="{{openCurly}}'is-invalid-input': GOINPUTNAME[{{getKey}}].$error.server{{closeCurly}}" type="text" ng-model="{{getKey}}" ng-required="{{isRequired}}" placeholder=""/>
    <span class="form_error form-error" ng-class="{{openCurly}}'is-visible': GOINPUTNAME[{{getKey}}].$error.server{{closeCurly}}" ng-show="GOINPUTNAME[{{getKey}}].$error.server">{{openCurly}}{{openCurly}}GOINPUTNAME[{{getKey}}].$error.server{{closeCurly}}{{closeCurly}}</span>
  </div>
</div>
{{/fields}}
